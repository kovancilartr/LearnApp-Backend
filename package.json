{
  "name": "learnapp-backend",
  "version": "1.0.0",
  "description": "LearnApp Backend API - Remote education platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "test": "NODE_ENV=test jest --runInBand",
    "test:watch": "NODE_ENV=test jest --watch --runInBand",
    "test:coverage": "NODE_ENV=test jest --coverage --runInBand",
    "test:unit": "NODE_ENV=test jest --testPathPatterns=service.test.ts --runInBand",
    "test:integration": "NODE_ENV=test jest --testPathPatterns=controller.test.ts --runInBand",
    "test:e2e": "NODE_ENV=test jest --testPathPatterns=integration.test.ts --runInBand",
    "test:auth": "NODE_ENV=test jest --testPathPatterns=auth --runInBand",
    "test:database": "NODE_ENV=test jest --testPathPatterns=database.test.ts --runInBand",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "setup": "./scripts/setup-database.sh"
  },
  "keywords": [
    "education",
    "api",
    "nodejs",
    "typescript"
  ],
  "author": "LearnApp Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.16.3",
    "aws-sdk": "^2.1509.0",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.4",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^13.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "prisma": "^6.16.3",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  }
}
